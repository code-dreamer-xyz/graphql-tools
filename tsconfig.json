{
	"compilerOptions": {
		"experimentalDecorators": true,
		"lib": ["es6", "dom"],
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"declaration": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"removeComments": false,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"@types/node",
			"graphql-typings"
		]
	},
	"exclude": [
		"node_modules"
	]
}
